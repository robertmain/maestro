{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "resolveJsonModule":  true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin"
      }
    ],
  },
  "exclude": ["node_modules"]
}
